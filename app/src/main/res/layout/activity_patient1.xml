<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shan.traumatrace.Patient1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Required Facilities"
        android:id="@+id/textView5"
        android:layout_row="0"
        android:layout_column="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICU"
        android:id="@+id/checkBox"
        android:layout_marginTop="45dp"
        android:checked="false"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/checkBox3"
        android:textStyle="bold"
        android:textSize="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ventilators"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="51dp"
        android:textStyle="bold"
        android:textSize="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Theater"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_below="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginTop="91dp"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medical Specialist"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="click"
        android:id="@+id/button"
        android:textColor="#040303"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView5" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neurology"
        android:id="@+id/checkBox4"
        android:layout_column="0"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox6"
        android:layout_marginTop="49dp"
        android:textSize="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiology"
        android:id="@+id/checkBox5"
        android:layout_column="8"
        android:checked="false"
        android:textStyle="bold"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:textSize="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orthology"
        android:id="@+id/checkBox6"
        android:layout_column="10"
        android:checked="false"
        android:textStyle="bold"
        android:layout_above="@+id/button"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginBottom="117dp"
        android:textSize="25dp" />

</RelativeLayout>
